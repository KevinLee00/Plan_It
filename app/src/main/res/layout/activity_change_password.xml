<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:ignore="MissingPrefix"
    fontPath="fonts/Roboto-Condensed.ttf"
    android:screenOrientation="portrait"
    tools:context="com.example.user01.planit.ChangePasswordActivity">

    <TextView
        fontPath="fonts/plan.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Plan it "
        android:textColor="@color/white"
        android:id="@+id/title"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textSize="70dp"
        android:singleLine="true"

        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etOldPassword"
        android:singleLine="true"
        android:hint="Current Password"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        fontPath="fonts/RobotoL.ttf"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="false"
        android:id="@+id/etNewPassword"
        android:hint="New Password"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        fontPath="fonts/RobotoL.ttf"
        android:visibility="visible"
        android:password="true"
        android:layout_below="@+id/etOldPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:singleLine="true"
        android:id="@+id/etRetypePassword"
        android:hint="Retype Password"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        fontPath="fonts/RobotoL.ttf"
        android:visibility="visible"
        android:password="true"
        android:layout_below="@+id/etNewPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="Change Password"
        android:id="@+id/bChangePassword"
        fontPath="fonts/Roboto-Condensed.ttf"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:textSize="7pt"
        android:layout_below="@+id/etRetypePassword"
        android:layout_marginTop="27dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbLoadingImage"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/bChangePassword"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminate="false" />


</RelativeLayout>
